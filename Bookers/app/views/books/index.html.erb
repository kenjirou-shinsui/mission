<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>

<table cellspacing="20">
	<tr>
<th>Title</th>
<th>Body</th>
<th></th>

</tr>

<% @books.each do |book| %>
<tr>

<td><%= book.title %></td>
<td><%= book.body %></td>

<td>
<%= link_to "Show", book_path(book.id)  %>
<%= link_to "Edit", edit_book_path(book.id)  %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

</td>
</tr>
<% end %>

</table>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    	<li><%= "#{@book.errors.full_messages.count}件のエラーが発生しました" %></li>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h5>Title</h5>
	<%= f.text_field :title %>
	<h5>Body</h5>
	<%=f.text_area :body %>

	<div><%= f.submit 'Create Book' %></div>

<% end %>

