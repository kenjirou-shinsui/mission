

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    	<li><%= "#{@book.errors.full_messages.count}件のエラーが発生しました" %></li>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<div>
<%= f.submit 'Update Book' %>
</div>
<% end %>

<span><%= link_to "Show" ,book_path(@book) %>
|
<%= link_to "Back" ,books_path %></span>

